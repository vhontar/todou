<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="androidx.core.text.HtmlCompat"/>
        <variable
                name="viewmodel"
                type="com.easycodingstudio.todou.ui.todou.TodouViewModel"/>
    </data>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewmodel.day}"
                    android:textSize="32sp"
                    android:layout_margin="@dimen/default_margin"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="22"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewmodel.month}"
                    android:textSize="12sp"
                    android:layout_marginStart="5dp"
                    android:includeFontPadding="false"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toTopOf="@id/tvDay"
                    app:layout_constraintStart_toEndOf="@id/tvDay"
                    tools:text="Mar"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewmodel.year}"
                    android:textSize="12sp"
                    android:layout_marginStart="5dp"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toBottomOf="@id/tvMonth"
                    app:layout_constraintStart_toEndOf="@id/tvDay"
                    tools:text="2021"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewmodel.time}"
                    android:textSize="32sp"
                    android:layout_margin="@dimen/default_margin"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="22:40"/>

            <TextView
                    android:id="@+id/tvArchive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{HtmlCompat.fromHtml(@string/archive_underlinde, HtmlCompat.FROM_HTML_MODE_LEGACY)}"
                    android:layout_marginTop="@dimen/default_margin"
                    android:layout_marginEnd="@dimen/default_margin"
                    app:layout_constraintTop_toBottomOf="@id/tvTime"
                    app:layout_constraintBottom_toTopOf="@id/rvCategoriesWithTodos"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="@string/archive_underlinde"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCategoriesWithTodos"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/tvArchive"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>